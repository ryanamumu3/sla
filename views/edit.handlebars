<!-- views/edit.handlebars -->
<h1>Editar Anotação</h1>
<form action="/edit/{{annotation.id}}" method="POST">
  <div>
    <label for="title">Título:</label>
    <input type="text" name="title" id="title" value="{{annotation.title}}" required>
  </div>
  <div>
    <label for="content">Conteúdo:</label>
    <textarea name="content" id="content" required>{{annotation.content}}</textarea>
  </div>
  <button type="submit">Atualizar</button>
</form>
